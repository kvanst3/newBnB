<div class="spacer-on-top-search"></div>

<div class="row-search"><%= link_to "Back to the research", session.delete(:return_to) %></div>
<!--    <div class="row"><%= link_to "edit", edit_flat_path(@flat) %></div> -->

<div class="show-container">
 <!-- Box with all the cards -->

  <div class="show-card">
    <div >
      <div ><%= cl_image_tag @flat.photo, id: "show-big-image" %></div>
    </div>
    <div id="show-card-info">
      <div class="content-show">
        <div >
          <p class="asdfasdf asdfasdf2">Name:</p>
          <p class="asdfasdf2"> <%= @flat.title %> </p>
        </div>
        <div >
          <p class="asdfasdf">A bit more about this place:</p>
          <%= @flat.description %>
        </div>
        <div >
          <p class="asdfasdf">Price per night:</p>
          <%= @flat.price_per_night %> â‚¬
        </div>
        <div >
          <p class="asdfasdf">Type of place:</p>
          <%= @flat.housing_type %>
          </div>
        <div >
          <p class="asdfasdf">Number of beds:</p>
          <%= @flat.max_ppl %>people
        </div>
      </div>
    </div>
  </div>

  <div class="show-search-form">
    <div class="form">
      <h5>Confirm dates & guests for total stay price </h5>
      <div class="new_form">
      <form action="/flats/<%= @flat.id %>/bookings" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div style="display: flex;">
          <div>
            <label for="start_date">CHECK-IN</label>
            <input type="date" name="booking[start_date]" id="start_date" style="display: block;">
          </div>
          <div>
            <label for="end_date">CHECK-OUT</label>
            <input type="date" name="booking[end_date]" id="end_date" style="display: block;">
          </div>
          <div>
            <label for="guest">Number of guests</label>
            <input type="integer" name="booking[guest]" id="guest" style="display: block;">
          </div>
        </div>
        <input type="submit" value="Book" id="book-button">
      </form>

    </div>
  </div>
</div>

